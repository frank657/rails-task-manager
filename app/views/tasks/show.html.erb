<h2><%= @task[:title] %></h2>
<h5 style="color: blue"><%= @task[:details] %></h5>

<h5><%= link_to 'Edit task', edit_task_path %></h5>
<h5>
  <%= form_for(@task) do |t| %>
    <%= t.label :completed %>
    <%= t.check_box :completed %>
    <%= t.submit %>
  <% end %>
</h5>

<h5><%= link_to 'Delete task', task_path, method: :delete, data: { confirm: 'Are you sure?' } %></h5>
<%= link_to 'Back to list', tasks_path %>
